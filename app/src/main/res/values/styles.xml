<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.-->

        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarWidgetTheme">@style/ActionBarTheme</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>


    </style>

    <style name="AppTheme.NoActionBar.FirstTime">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="actionBarWidgetTheme">@style/ActionBarTheme</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>


    </style>

    <style name="ActionBarTheme" parent="style/ThemeOverlay.AppCompat.Dark">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <!-- THIS is where you can color the hamburger icon! -->
        <item name="color">@android:color/white</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="ToolbarPopupTheme" parent="style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.FloatingAccentButtonOverlay" >
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


</resources>
